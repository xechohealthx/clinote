{
  "manifest_version": 3,
  "name": "Clinote - HIPAA-Aware Clinical Transcription",
  "version": "1.0.0",
  "description": "Real-time medical transcription and clinical note generation for healthcare providers",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clinote"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["floating-ui.html", "floating-ui.css", "floating-ui.js"],
      "matches": ["<all_urls>"]
    }
  ]
}